{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "lib": ["es2018", "dom"],
    "jsx": "react",
    "jsxFactory": "createElement",
    "module": "commonjs",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "target": "ES2020"
  },
  "include": [
    "**/*.js"
  ],
  "exclude": [
    "vendor/"
  ]
}
