{
  "name": "Hypothesis - Web & PDF Annotation",
  "short_name": "Hypothesis",
  "version": "{{ version }}",
  "version_name": "{{ version }} ({{ versionName }})",
  "manifest_version": 2,

  {{#browserIsChrome}}
  "minimum_chrome_version": "38",
  {{/browserIsChrome}}

  {{#browserIsFirefox}}
  "applications": {
    "gecko": {
      "id": "firefox@hypothes.is",
      {{! Firefox v48 is required for
          https://bugzilla.mozilla.org/show_bug.cgi?id=1210583 }}
      "strict_min_version": "48.0.0"
    }
  },
  {{/browserIsFirefox}}

  "description": "Collaboratively annotate, highlight, and tag web pages and PDF documents.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "homepage_url": "https://hypothes.is/",
  "incognito": "split",

  "options_ui": {
    "page": "lib/options.html",
    "chrome_style": true
  },

  "offline_enabled": false,
  "permissions": [
    "<all_urls>",

    "contentSettings",
    "storage",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; font-src 'self' data:;",

  "background": {
    {{#browserIsChrome}}
    "persistent": true,
    {{/browserIsChrome}}
    "scripts": [
      "settings-data.js",
      "public/scripts/raven.bundle.js",
      "extension.bundle.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/browser-icon-inactive.png",
      "38": "images/browser-icon-inactive@2x.png"
    }
  },
  "web_accessible_resources": [
    "public/*",
    "content/*",
    "lib/*",
    "help/*",
    "content/web/viewer.html"
  ],
  "externally_connectable": {
    {{#bouncerUrl}}"matches": ["{{&bouncerUrl}}*"]{{/bouncerUrl}}
  }
}
